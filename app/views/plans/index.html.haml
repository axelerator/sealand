%h1 Listing plans

%table
  %tr
    %th 
    %th Name
    %th Description
    %th User
    %th
    %th
    %th

  - @plans.each do |plan|
    %tr
      %td= image_tag plan.plan_image.public_url, :style => "max-width: 30px;min-width: 30px; margin: 10px 0px;"
      %td= plan.name
      %td= plan.description
      %td
        - if plan.user
          = plan.user.email
      %td= link_to 'Show', plan
      %td= link_to 'Edit', edit_plan_path(plan)
      %td= link_to 'Destroy', plan, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Plan', new_plan_path
