!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %script{"src" => "http://www.openlayers.org/api/OpenLayers.js"}
  %body{"onload" => "init();"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} iLand Incubator
          -#
            .btn-group.pull-right
              - if current_user
                %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.icon-user
                  = current_user.email
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"} Profile
                  %li.divider
                  %li
                    =link_to "Sign Out", logout_path
              - else
                %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Login
                  %span.caret
                %ul.dropdown-menu
                  %li
                    =link_to "login", login_path
                  %li.divider
                  %li
                    =link_to "Sign Up", signup_path

    .container-fluid
      - unless content_for?(:sidebar)
        .span12
          = yield
      - else
        .row-fluid
          .span3
            .sidebar-nav
              = yield(:sidebar)
          .span9
            = yield
